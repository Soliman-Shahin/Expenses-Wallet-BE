# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/expenses-wallet

# JWT & Authentication
JWT_SECRET=your_jwt_secret_key_here
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
JWT_EXPIRES_IN=30d
REFRESH_TOKEN_EXPIRY_DAYS=10

# Encryption (IMPORTANT: Generate a strong random key!)
# To generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_256_bit_encryption_key_here

# Password Hashing
SALT_ROUNDS=10

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS & Security
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8100

# OAuth (Optional)
GOOGLE_WEB_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
MOBILE_OAUTH_REDIRECT=expenses-wallet://auth/callback

# Session
SECRET_KEY=your_session_secret_key_here
